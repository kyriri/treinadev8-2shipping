<h1><%= t('.title') %></h1>

<div class='container'>
  <% @building_blocks.each do |box| %>
    <div class='<%= box[:css_class] %>'> 
      <h4><%= box[:title] %></h4>
      <% if box[:collection].empty? %>
        <p><%= t('.no_service_orders') %></p>
      <% else %>
        <ul>
          <% box[:collection].each do |order| %>
            <li>ID: <%= order.id %> | <%= link_to t('.details'), order %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>
</div>